                							<span class="titletuto"><%=h d.title %></span>
											<div class="describ"><%=h d.description %></div>
            							</div>
            							<div class="creat"><i class="fa fa-user"></i>  <%=h d.author_first %> <%=h d.author_name %></div>
									</div>
									<div class="sup">
										<p>Programmez en <%=h d.language %></p>
									</div>
								</div>
